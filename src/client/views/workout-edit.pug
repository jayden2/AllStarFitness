div(id="page-wrapper" ng-class="{'open': toggle}" ng-controller="DashboardController" ng-cloak)
	//sidebar
	include ./partials/sidebar.pug
	//dashboard header
	include ./partials/dashboard-header.pug
	//main content
	//user management list
	div(class="row")
		div(class="col-lg-12")
			div(class="title-box")
				h1(class="title-header") {{ workout.title }}
				h2(class="sub-header") {{ workout.first_name }} {{ workout.last_name }}

			div(class="workout-box")
				ul
					li(ng-repeat="item in collection")
						p {{ item.title }}

			ul(class="exercise-list")
				li(ng-repeat="item in collection" class="exercise-item")
					div(class="row")
						h3(class="col-xs-7 item-title") {{ item.title }}
						div(class="col-xs-5")
							div(class="box-set")
								span(class="item-set-start") {{ item.def_set_start }}
								span(ng-hide="item.def_set_end == 1")  - 
								span(class="item-set-end" ng-hide="item.def_set_end == 1") {{ item.def_set_end }}
							
							div(class="box-rep")
								span(class="item-rep-start") {{ item.def_rep_start }}
								span(ng-hide="item.def_rep_end == 1")  - 
								span(class="item-rep-end" ng-hide="item.def_rep_end == 1") {{ item.def_rep_end }}

						div(class="row")
							img(class="col-xs-7 item-image" ng-src="{{ item.image }}")
							p(class="col-xs-4 item-description") {{ item.description }}