div(id="page-wrapper" ng-class="{'open': toggle}" ng-controller="DashboardController" ng-cloak)
	//sidebar
	include ./partials/sidebar.pug
	//dashboard header
	include ./partials/dashboard-header.pug
	//main content
	//user management list
	div(class="row")
		div(class="col-lg-12")
			rd-widget
				rd-widget-header(icon="fa-database" title="Exercises")
					button(type="button" class="btn btn-info create-button" ng-click="openModal('create', '')") Add Exercise 
						i(class="fa fa-plus fa-1x" aria-hidden="true")
					input(type="text" placeholder="Search Exercise..." class="form-control input-sm" ng-model="search.query")
				rd-widget-body(classes="large no-padding")
					div(class="table-responsive")
						table(class="table table-striped table-hover")
							thead
								tr
									th(class="text-center") ID
									th Title
									th Description
									th(class="text-center") Date Updated
									th(class="text-center") Favourite
									th(class="text-center") Edit
							tbody
								tr(ng-repeat="exercise in filteredExercises()")
									td(class="text-center") {{ exercise.id }}
									td {{ exercise.title }}
									td {{ exercise.description }}
									td(class="text-center") {{ exercise.date_updated }}
									td(class="text-center")
										i(class="fa fa-star" aria-hidden="true")
										span {{ exercise.favourite }}
									td(class="text-center")
										button(type="button" class="btn btn-info btn-sm" ng-click="openModal('edit', user)") EDIT 
											i(class="fa fa-pencil-square-o fa-fw" aria-hidden="true")